<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
  <tr>
    <th>NAME</th>
    <th>EXPLANATION</th>
    <th>QUANTITY</th>
    <th colspan="3" class="text-center">TOOLS</th>
  </tr>
  </thead>
  <tbody>
  <% @materials.each do |material| %>
    <tr>
      <td><%= material.name %></td>
      <td><%= material.explanation %></td>
      <td><%= material.quantity %></td>
      <td><%= link_to "Show", material, class: "btn btn-secondary"%></td>
      <td><%= link_to "Edit", edit_material_path(material), class: "btn btn-warning" %></td>
      <td><%= button_to "Delete", material, method: :delete, class: "btn btn-danger", form: {data: {turbo_confirm: 'Are you sure?'}} %></td>
    </tr>
  <% end %>
  </tbody>

</table>
<%= link_to "New material", new_material_path, class: "btn btn-secondary" %>