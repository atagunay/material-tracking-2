<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
  <tr>
    <th>NAME</th>
    <th>EXPLANATION</th>
    <th>QUANTITY</th>
    <th>REORDER QUANTITY</th>
    <th>USER ID</th>
    <th colspan="1" class="text-center"></th>
  </tr>
  </thead>
  <tbody>
  <% @materials.each do |material| %>
    <tr>
      <td><%= link_to material.name, material%></td>
      <td><%= material.explanation %></td>
      <td><%= material.quantity %></td>
      <td><%= material.reorder_quantity %></td>
      <td><%= material.user.email %></td>
      <td><%= button_to "Delete", material, method: :delete, class: "btn btn-outline-danger", form: {data: {turbo_confirm: 'Are you sure?'}} %></td>
    </tr>
  <% end %>
  </tbody>

</table>
<%= link_to "New material", new_material_path, class: "btn btn-secondary" %>
<%= link_to "Export CSV", materials_path(format: :csv), class: "btn btn-secondary" %>