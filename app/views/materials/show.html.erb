<div class="p-3 mb-2 bg-dark text-white">
  <h1 class="display-4"> <%= @material.name %> </h1>
  <p class="lead"><strong>In Stock Quantity:</strong> <%= @material.quantity %></p>
  <p class="lead"><strong>Reorder Quantity:</strong> <%= @material.reorder_quantity %></p>
  <p class="lead"><strong>Location:</strong> <%= @material.location %></p>
  <p class="lead"><strong>Status:</strong> <%= @material&.status&.name %></p>
  <p class="lead"><strong>Explanation:</strong> <%= @material.explanation %></p>
  <p class="lead"><strong>User:</strong> <%= @material.user.email %></p>

  <%= link_to "Edit", edit_material_path(@material), class: "btn btn-secondary"%>
  <%= link_to "Back", materials_path, class: "btn btn-secondary"%>
</div>

